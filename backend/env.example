# Node Environment
NODE_ENV=development

# Server
PORT=5000
API_PREFIX=/api

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/gst_saas
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gst_saas
DB_USER=postgres
DB_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# GST Portal API (if available)
GST_API_BASE_URL=https://api.gst.gov.in
GST_API_KEY=your-gst-api-key
GST_API_TIMEOUT=30000

# Razorpay (Week 11-12: Payment Gateway)
# Get keys from: https://dashboard.razorpay.com/app/keys
# Test mode: rzp_test_xxxxxxxxxxxx
# Live mode: rzp_live_xxxxxxxxxxxx
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your-razorpay-secret-key
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret
# Webhook URL: https://your-domain.com/api/webhooks/razorpay

# AWS S3 (File Storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
S3_BUCKET_NAME=gst-saas-documents

# Email Service (Week 9-10: PDF & Email)
# For Gmail: smtp.gmail.com, port 587, use App Password
# For SendGrid: smtp.sendgrid.net, port 587, use API Key
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=GST Compliance SaaS

# PDF Storage (Week 9-10)
PDF_STORAGE_PATH=./storage/invoices

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Allowed Origins (CORS)
ALLOWED_ORIGINS=http://localhost:3000,https://app.gst-saas.com
